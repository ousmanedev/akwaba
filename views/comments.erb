<div id="akwaba-comments">
    <%= erb :comment_form, locals: { database_id: database_id, parent_type: 'root', parent_id: '' } %>

    <% comments.each do |comment| %>
        <%= erb :comment, locals: { comment: comment, database_id: database_id } %>
    <% end %>
</div>

<style>
    #akwaba-comments > .comment-box {
        border-top: 1px solid #ccc;
        background: transparent;
        margin-top: 10px;
    }

    .replies > .comment-box {
        margin-left: 48px;
    }

    .comment-box {
        margin-bottom: 16px;
        border-top: 1px solid #ccc;
        background: transparent;
        margin-top: 10px;
    }

    .name {
        color: #828282;
        font-size: 16px;
    }

    .date {
        font-size: 14px;
    }

    .body {
        font-size: 17px;
    }

    .comment-form .body-field {
        width: 100%;
        height: 15em;
    }
    .comment-form .name-field, .comment-form .email-field {
        width: 50%;
        height: 3em;
    }

    .comment-form .submit-field {
        height: 3em;
        background-color: #000;
        color: #fff;
    }

    .comment-form .input-block {
        margin-bottom: 10px;
    }

    .comment-form[data-parent-type='comment'] {
        display: none;
    }

    .replies {
        margin-left: 20px;
    }
</style>