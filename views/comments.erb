<div id="akwaba-comments">
    <%= erb :comment_form, locals: { database_id: database_id, parent_type: 'root', parent_id: '' } %>

    <% comments.each do |comment| %>
        <%= erb :comment, locals: { comment: comment, database_id: database_id } %>
    <% end %>
</div>

<style>
    .comment-box {
        border-left: 1px solid #ccc;
        padding-left: 10px;
    }

    .name {
        color: #828282;
        font-size: 16px;
    }

    .date {
        font-size: 14px;
    }

    .body {
        font-size: 17px;
    }

    .comment-form[data-parent-type='comment'] {
        display: none;
    }

    .replies {
        margin-left: 20px;
    }
</style>